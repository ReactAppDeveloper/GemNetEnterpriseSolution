<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_invoice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="com.example.xhanii.gemnetenterprisesolution.Create_user">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <Button

            android:layout_gravity="top|left"
            android:id="@+id/back"
            android:background="@drawable/ic_arrow_back"
            android:layout_marginRight="30dp"
            android:layout_width="50dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create User"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:layout_gravity="top|center_horizontal"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="30dp"
            android:id="@+id/textView" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Create User"-->
                <!--android:textAppearance="?android:textAppearanceLarge"-->
                <!--android:textStyle="bold"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:textColor="#FFFFFF"-->
                <!--/>-->


            <EditText
                android:layout_width="match_parent"
                android:hint="Enter User Id"
                android:id="@+id/userid1"
                android:maxLines="1"
                android:drawableLeft="@drawable/ic_perm_identity"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="45dp"
                android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|start"
                />
            <EditText
                android:layout_width="match_parent"
                android:hint="Enter User Password"
                android:id="@+id/password1"
                android:maxLines="1"
                android:drawableLeft="@drawable/ic_lock"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="45dp"
                android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|start"
                />


            <EditText
                android:layout_width="match_parent"
                android:hint="Enter User Name"
                android:id="@+id/cus_name1"
                android:maxLines="1"
                android:drawableLeft="@drawable/ic_perm_identity"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="45dp"
                android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|start"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:maxLines="4"
                android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|start"
                android:hint="Enter House Address"
                android:id="@+id/address1"
                android:drawableLeft="@drawable/ic_home"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|start"
                android:hint="Enter Email Address"
                android:maxLines="1"
                android:id="@+id/email1"
                android:drawableLeft="@drawable/ic_email"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:inputType="textEmailAddress"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|start"
                android:hint="Enter Mobile Number"
                android:maxLines="1"
                android:id="@+id/cell_no1"
                android:drawableLeft="@drawable/ic_contact_phone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:inputType="number"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|start"
                android:hint="Enter Physical/IP Address"
                android:maxLines="1"
                android:id="@+id/ip_address1"
                android:drawableLeft="@drawable/ic_vpn_key"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|start"
                android:hint="Enter Package"
                android:maxLines="1"
                android:id="@+id/net_package1"
                android:drawableLeft="@drawable/ic_wifi_tethering"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|start"
                android:hint="Amount"
                android:maxLines="1"
                android:id="@+id/total_amount1"
                android:drawableLeft="@drawable/ic_monetization_on"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:inputType="number"
                />
            <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="45dp"-->
                <!--android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|start"-->
                <!--android:hint="Recieved Amount"-->
                <!--android:maxLines="1"-->
                <!--android:id="@+id/recieved_amount1"-->
                <!--android:drawableLeft="@drawable/ic_monetization_on"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:layout_weight="0.07"-->
                <!--android:inputType="number"/>-->
            <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="45dp"-->
                <!--android:gravity="center_vertical|fill_vertical|center_horizontal|fill_horizontal|start"-->
                <!--android:hint="Remaing Balance"-->
                <!--android:maxLines="1"-->
                <!--android:id="@+id/balance1"-->
                <!--android:drawableLeft="@drawable/ic_monetization_on"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:layout_weight="0.07"-->
                <!--android:inputType="number"-->
                <!--android:clickable="false"-->
                <!--android:cursorVisible="false"-->
                <!--android:focusable="false"-->
                <!--android:focusableInTouchMode="false"/>-->



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="20dp"
                android:weightSum="2">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Create"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:id="@+id/buttonCreate"
                    android:layout_toLeftOf="@+id/view"
                    android:background="#003965"
                    android:textColor="#FFFFFF" />
                <View
                    android:id="@+id/view"
                    android:layout_height="1dp"
                    android:layout_width="0dp"
                    android:layout_centerHorizontal="true" />
                <Button
                    android:text="Cancel"
                    android:id="@+id/cancel"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:background="#003965"
                    android:textColor="#FFFFFF"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
